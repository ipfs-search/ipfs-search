{
  "dynamic": "strict",
  "properties": {
    "content": {
        "type": "text",
        "term_vector": "with_positions_offsets"
    },
    "first-seen": {
        "type": "date",
        "format": "strict_date_time"
    },
    "last-seen": {
        "type": "date",
        "format": "strict_date_time"
    },
    "ipfs_tika_version": {
        "type": "keyword"
    },
    "language": {
        "properties": {
            "confidence": {
                "type": "keyword"
            },
            "language": {
                "type": "keyword"
            },
            "rawScore": {
                "type": "double"
            }
        }
    },
    "references": {
        "properties": {
            "hash": {
                "type": "keyword"
            },
            "name": {
                "type": "text"
            },
            "parent_hash": {
                "type": "keyword"
            }
        }
    },
    "size": {
        "type": "long"
    },
    "urls": {
      "enabled": false,
      "type": "object"
    },
    "metadata": {
      "dynamic": false,
      "properties": {
        "dc:title": {
          "type": "text"
        },
        "title": {
          "type": "alias",
          "path": "metadata.dc:title"
        },

        "dc:creator": {
          "type": "text"
        },
        "dc:contributor": {
          "index": false,
          "doc_values": false,
          "copy_to": "dc:creator"
        },
        "meta:last-author": {
          "index": false,
          "doc_values": false,
          "copy_to": "dc:creator"
        },
        "article:author": {
          "index": false,
          "doc_values": false,
          "copy_to": "dc:creator"
        },

        "dc:identifier": {
          "type": "keyword"
        },
        "identifier": {
          "type": "alias",
          "path": "metadata.dc:identifier"
        },
        "xmpMM:DocumentID": {
          "type": "keyword",
          "index": false,
          "doc_values": false,
          "copy_to": "metadata.dc:identifier"
        },
        "xmpMM:DerivedFrom:DocumentID": {
          "type": "keyword",
          "index": false,
          "doc_values": false,
          "copy_to": "metadata.dc:identifier"
        },
        "xmpMM:DerivedFrom:InstanceID": {
          "type": "keyword",
          "index": false,
          "doc_values": false,
          "copy_to": "metadata.dc:identifier"
        },
        "Content Identifier": {
          "type": "keyword",
          "index": false,
          "doc_values": false,
          "copy_to": "metadata.dc:identifier"
        },

        "dc:language": {
          "type": "keyword"
        },

        "dc:description": {
          "type": "text"
        },
        "description": {
          "type": "alias",
          "path": "metadata.dc:description"
        },
        "subject": {
          "type": "alias",
          "path": "metadata.dc:description"
        },
        "dc:subject": {
          "type": "text",
          "copy_to": "metadata.dc:description"
        },
        "metadata.meta:keyword": {
          "type": "text",
          "copy_to": "metadata.dc:description"
        },

        "dc:publisher": {
          "type": "keyword"
        },

        "dcterms:created": {
          "type": "date",
          "format": "date_optional_time",
          "ignore_malformed": true
        },
        "dcterms:modified": {
          "type": "date",
          "format": "date_optional_time",
          "ignore_malformed": true
        },

        "w:comments": {
          "type": "text",
          "index": false,
          "doc_values": false,
          "copy_to": "content"
        }
      }
    }
  }
}
