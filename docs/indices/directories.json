{
    "settings": {
        "index": {
            "refresh_interval": "15m",
            "number_of_shards": "20"
        }
    },
    "mappings": {
        "dynamic": "strict",
        "properties": {
            "first-seen": {
                "type": "date",
                "format": "date_time_no_millis"
            },
            "last-seen": {
                "type": "date",
                "format": "date_time_no_millis"
            },
            "links": {
                "dynamic": true,
                "properties": {
                    "Hash": {
                        "type": "keyword",
                        "index": true
                    },
                    "Name": {
                        "type": "text"
                    },
                    "Size": {
                        "type": "long",
                        "ignore_malformed": true
                    },
                    "Type": {
                        "type": "keyword"
                    }
                }
            },
            "size": {
                "type": "unsigned_long",
                "ignore_malformed": true
            },
            "references": {
                "properties": {
                    "name": {
                        "type": "text",
                        "index": true
                    },
                    "hash": {
                        "type": "keyword",
                        "index": true
                    },
                    "parent_hash": {
                        "type": "keyword",
                        "index": true
                    }
                }
            }
        }
    }
}
